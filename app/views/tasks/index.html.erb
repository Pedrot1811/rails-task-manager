<h1>My tasks!</h1>
<ul>
  <% @tasks.each do |task| %>
    <li> <input class="form-check-input" type="checkbox" <%= "checked" if task.completed %>> --> <%= link_to task.title, "tasks/#{task.id}" %> <%= link_to "Delete", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<%= link_to "Add a new task", "tasks/new" %>
